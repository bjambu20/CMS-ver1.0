<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_alignParentTop="true"
            android:background="#13b586"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/app_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginLeft="25dp"
                android:text="Marks"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:gravity="right"
                android:orientation="horizontal" >
            </LinearLayout>
        </LinearLayout>

        <Spinner
            android:id="@+id/spinnerTest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/spinnerTest"
            android:gravity="center" />

        <Spinner
            android:id="@+id/spinnerSub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/spinnerSub"
            android:gravity="center" />

        <Spinner
            android:id="@+id/spinnerClassid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/spinnerCid"
            android:gravity="center"  />

        <TableLayout
            android:id="@+id/the_table"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dip"
            android:paddingBottom="10dip"
            android:scrollbars="vertical"
            android:stretchColumns="*" >
        </TableLayout>

        <Button
            android:id="@+id/timbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#13b586"
            android:text="Submit" />
    </LinearLayout>

</ScrollView>